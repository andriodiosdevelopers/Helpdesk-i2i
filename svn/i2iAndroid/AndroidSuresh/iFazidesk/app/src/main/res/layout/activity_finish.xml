<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="helpdesk.i2i.com.ifazidesk.activities.Finish">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/yellow_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="#BC1C1D"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="20sp"
                android:text="Thank You"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </RelativeLayout>


        <ScrollView
            android:id="@+id/scroll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yellow_bar" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                >
                <TextView
                    android:id="@+id/tu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text=""
                    android:textSize="23sp"
                    android:textColor="#000000"
                    android:layout_below="@+id/imageview_thanks"
                    android:textStyle="italic" />

                <ImageView
                    android:id="@+id/imageview_thanks"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"

                    android:src="@drawable/icon_thanks"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:id="@+id/ticketclosing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageview_thanks"
                    android:gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:text=""
                    android:textSize="19sp"
                    android:textColor="#000000"
                    android:textStyle="italic" />


                <TextView
                    android:id="@+id/textview_reqhours"
                    android:layout_width="95dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@+id/ticketclosing"
                    android:text="00:00:00"
                    android:visibility="gone"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true" />


                <Button
                    android:id="@+id/button_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_reqhours"
                    android:layout_marginLeft="79dp"
                    android:layout_marginTop="25dp"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:background="@drawable/drawable_button"
                    android:shadowColor="#B03510"
                    android:text=" Home "
                    android:textColor="#FFFFFF"
                    />

                <Button
                    android:id="@+id/button_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textview_reqhours"
                    android:layout_marginRight="79dp"
                    android:layout_marginTop="25dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:background="@drawable/drawable_button"
                    android:shadowColor="#B03510"
                    android:text=" New Issue "
                    android:textColor="#FFFFFF"
                    />

                <Button
                    android:id="@+id/button_exit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button_new"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/drawable_button"
                    android:shadowColor="#B03510"
                    android:text=" Exit "
                    android:padding="10dp"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
