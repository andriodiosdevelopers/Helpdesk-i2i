<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_margin="3dp"
    android:background="@color/bg_whitetransparent">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content">

        <TextView
            android:id="@+id/textview_historystatus"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="OPEN"
            android:textSize="14dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:padding="1dp"
            android:gravity="left|center_vertical"/>

        <TextView
            android:id="@+id/textview_historydatetime"
            android:layout_toRightOf="@+id/textview_historystatus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Mar 02 2017\n10:24 PM"
            android:textSize="13dp"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:padding="1dp"
            android:gravity="left|center_vertical"/>

        <TextView
            android:id="@+id/textview_locationandperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ecoworld 4AB - Protick Basu"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textview_historydatetime"
            android:padding="1dp"
            android:gravity="left|center_vertical"/>
        <TextView
            android:id="@+id/textview_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_locationandperson"
            android:text="Changed into inprogress"
            android:textSize="14dp"
            android:textColor="#696969"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textview_historydatetime"
            android:padding="1dp"
            android:gravity="left|center_vertical"/>

        <View
            android:layout_below="@+id/textview_desc"
            android:id="@+id/view_dot_location"
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginTop="0.6dp"
            android:background="@color/bg_grey"/>
    </RelativeLayout>

</TableRow>