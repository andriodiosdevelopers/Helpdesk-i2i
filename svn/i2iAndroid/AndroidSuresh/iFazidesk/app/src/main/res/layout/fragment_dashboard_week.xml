<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_whitetransparent"
    tools:context="helpdesk.i2i.com.ifazidesk.activities.Dashboard">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_root"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                         <RelativeLayout
                            android:id="@+id/rl_imageview"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:background="@color/bg_red"
                            android:padding="1dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">

                             <ImageView
                                 android:id="@+id/imageview_prevweek"
                                 android:layout_width="26dp"
                                 android:layout_height="26dp"
                                 android:layout_alignParentLeft="true"
                                 android:rotation="180"
                                 android:padding="6dp"
                                 android:src="@drawable/image_icon_rightarrow_white"/>
                            <TextView
                                android:id="@+id/textview_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/imageview_prevweek"
                                android:textColor="@color/bg_white"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="WEEK 52"/>
                             <ImageView
                                 android:id="@+id/imageview_nextweek"
                                 android:layout_width="25dp"
                                 android:layout_height="25dp"
                                 android:padding="6dp"
                                 android:layout_toRightOf="@+id/textview_week"
                                 android:src="@drawable/image_icon_rightarrow_white"/>

                             <TextView
                                 android:id="@+id/textview_weekdates"
                                 android:layout_width="wrap_content"
                                 android:minWidth="220dp"
                                 android:layout_height="wrap_content"
                                 android:layout_alignParentRight="true"
                                 android:textColor="@color/bg_white"
                                 android:layout_centerVertical="true"
                                 android:textSize="14dp"
                                 android:gravity="center_horizontal|center_vertical"
                                 android:text="Today"/>
                         </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/lt_status"
                            android:layout_below="@+id/rl_imageview"
                            android:layout_width="match_parent"
                            android:padding="2.5dp"
                            android:layout_height="68dp">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerView_status"
                                android:layout_width="wrap_content"
                                android:layout_height="68dp"
                                android:orientation="horizontal"
                                android:layout_centerHorizontal="true"
                                android:background="@color/bg_whitetransparent_blur"
                                app:layoutManager="android.support.v7.widget.LinearLayoutManager" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/lt_status"
                            android:padding="5dp">
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerView_tickets"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/bg_whitetransparent_blur"
                                app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>
                        </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
