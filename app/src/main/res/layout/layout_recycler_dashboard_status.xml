<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:layout_centerHorizontal="true"
    >
    <RelativeLayout
        android:layout_width="72dp"
        android:layout_height="66dp"
        android:id="@+id/cv_issueitem"
        android:layout_centerHorizontal="true"
        >
        <RelativeLayout
            android:layout_width="72dp"
            android:layout_height="66dp"
            >
            <TextView
                android:id="@+id/textview_statusid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
             <TextView
                android:id="@+id/textView_istotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/textView_colorcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/textview_statuscount"
                android:layout_width="78dp"
                android:layout_height="40dp"
                android:text="10000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/bg_white"
                android:gravity="center_horizontal|bottom"/>

            <TextView
                android:id="@+id/textview_statusname"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_below="@+id/textview_statuscount"
                android:text="Status"
                android:textSize="12dp"
                android:textColor="@color/bg_white"
                android:gravity="center_horizontal|top"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>