<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_border"
    android:layout_margin="2dp"
    >
<RelativeLayout
    android:id="@+id/rl_ticket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
     >

    <TextView 
        android:id="@+id/textview_ticketno"
        android:layout_toRightOf="@+id/imageviewid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket no"
        android:textColor="#000000"
        android:textSize="12dp"
        android:gravity="center_vertical|left"
        android:padding="2dp"
        />

    <TextView
        android:id="@+id/textview_datetime"
        android:layout_toRightOf="@+id/imageviewid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Mar 9, 2017 12:00PM"
        android:textColor="#000000"
        android:textSize="12dp"
        android:padding="2dp"
        android:gravity="center_horizontal|center_vertical"
        />

    <TextView
        android:id="@+id/textview_ticketid"
        android:layout_toRightOf="@+id/imageviewid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ticket no"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="14.5dp"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/textview_category"
        android:layout_toRightOf="@+id/imageviewid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="125dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textview_ticketno"
        android:text="Category"
        android:gravity="left|center_vertical"
        android:textColor="#000000"
        android:textSize="14.5dp"
        android:layout_marginTop="1dp"
        />

    <TextView
        android:id="@+id/textview_status"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_status_solid"
        android:textColor="#ffffff"
        android:text="In-Progress"
        android:textSize="10dp"
        android:padding="2dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textview_datetime"
        />

    <TextView
        android:id="@+id/textview_priority"
        android:layout_below="@+id/textview_datetime"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/textview_status"
        android:text="Priority"
        android:textSize="10dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/textview_priority"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="#ffffff"
        android:padding="2dp" />

    <TextView
        android:id="@+id/textview_subject"
        android:layout_toRightOf="@+id/imageviewid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="26dp"
        android:layout_below="@+id/textview_category"
        android:layout_toLeftOf="@+id/textview_priority"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="30dp"
        android:text="Subject"
        android:singleLine="true"
        android:gravity="left|center_vertical"
        android:textColor="#C0C0C0"
        android:textSize="12dp"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/textview_location"
        android:layout_toRightOf="@+id/imageviewid"
        android:layout_alignLeft="@+id/textview_priority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="26dp"
        android:layout_below="@+id/textview_category"
        android:layout_toLeftOf="@+id/imageview_arrow"
        android:layout_marginRight="3dp"
        android:text="Subject"
        android:singleLine="true"
        android:gravity="right|center_vertical"
        android:textColor="#808080"
        android:textSize="10dp"
        android:layout_marginTop="2dp"
        />


    <TextView
        android:id="@+id/textview_isclosed"
        android:layout_toRightOf="@+id/imageviewid"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/textview_status"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="30dp"
        android:text="Subject"
        android:singleLine="true"
        android:gravity="left|center_vertical"
        android:textColor="#C0C0C0"
        android:textSize="12dp"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        />

    <TextView
        android:id="@+id/textview_count"
        android:layout_toRightOf="@+id/imageviewid"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/textview_status"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="30dp"
        android:text="Subject"
        android:singleLine="true"
        android:gravity="left|center_vertical"
        android:textColor="#C0C0C0"
        android:textSize="12dp"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        />

    <TextView
            android:id="@+id/textview_isonhold"
            android:layout_toRightOf="@+id/imageviewid"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/textview_status"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="30dp"
            android:text="Subject"
            android:singleLine="true"
            android:gravity="left|center_vertical"
            android:textColor="#C0C0C0"
            android:textSize="12dp"
            android:visibility="gone"
            android:layout_marginTop="2dp"
            />

    <ImageView
        android:id="@+id/imageview_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:padding="2dp"
        android:layout_marginRight="-5dp"
        android:layout_marginTop="7.5dp"
        android:layout_below="@+id/textview_status"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_right_arrow_black"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/rl_ticket"
        android:background="#ff2d7a2d"
        android:visibility="gone"
        />

</RelativeLayout>
